<UserControl x:Class="WWiseToolsWPF.Views.FNVHasher"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="900"
             MinHeight="600">

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ===================== -->
        <!-- Output LOG -->
        <!-- ===================== -->
        <GroupBox Grid.Row="0"
                  Header="Output"
                  FontFamily="Segoe UI"
                  FontSize="12"
                  Padding="5"
                  Margin="0,10,0,10">

            <RichTextBox x:Name="OutputTextBox"
                             IsReadOnly="True"
                             FontFamily="Consolas"
                             FontSize="12" Height="580">
                <FlowDocument PageWidth="10000"/>
            </RichTextBox>
        </GroupBox>

        <!-- ===================== -->
        <!-- Input -->
        <!-- ===================== -->
        <GroupBox Grid.Row="1"
          Header="Input"
          FontFamily="Segoe UI"
          FontSize="12"
          Padding="6"
          Margin="0,5,0,5">

            <StackPanel>

                <!-- Options row -->
                <StackPanel Orientation="Horizontal" Margin="0,0,10,10">
                    <RadioButton x:Name="FNV32RadioButton"
                         IsChecked="False"
                         Margin="0,0,5,0"
                         Content="FNV1__32">                        
                    </RadioButton>

                    <RadioButton x:Name="FNV64RadioButton"
                         Margin="0,0,10,10" IsChecked="True"
                         Content="FNV1__64">
                    </RadioButton>

                    <CheckBox x:Name="LegacyCheckBox">
                        Legacy (xd)
                    </CheckBox>
                </StackPanel>

                <!-- Input box -->
                <TextBox x:Name="InputTextBox"
                     IsReadOnly="False"
                     FontFamily="Consolas"
                     FontSize="12"
                     Height="25"
                     KeyDown="OnKeyDownHandler">
                    <!--<FlowDocument PageWidth="10000"/>-->
                </TextBox>

            </StackPanel>
        </GroupBox>
    </Grid>
</UserControl>
