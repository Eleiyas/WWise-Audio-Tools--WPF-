<UserControl x:Class="WWiseToolsWPF.Views.MassHasher"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="900"
             MinHeight="600">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <GroupBox Grid.Row="0"
				  x:Name="IOGroupBox"
                  Header="I/O"
                  FontFamily="Segoe UI"
                  FontSize="12"
                  Padding="8"
                  Margin="0,0,0,12">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="Input File:" VerticalAlignment="Center"/>
                <TextBox Grid.Row="0" Grid.Column="1"
						 x:Name="InputTextBox"
                         IsReadOnly="True"
                         Margin="6,4"
                         Text="No Input File Selected."/>
                <Button Grid.Row="0" Grid.Column="2"
                        Content="Browse"
                        Padding="8,4"
                        Margin="6,4"
                        Click="InputButton_Click"/>

                <Label Grid.Row="1" Grid.Column="0" Content="Output Directory:" VerticalAlignment="Center"/>
                <TextBox Grid.Row="1" Grid.Column="1"
						 x:Name="OutputDirectoryTextBox"
                         IsReadOnly="True"
                         Margin="6,4"
                         Text="No Output Directory Selected."/>
                <Button Grid.Row="1" Grid.Column="2"
                        Content="Browse"
                        Padding="8,4"
                        Margin="6,4"
                        Click="OutputDirectoryButton_Click"/>
            </Grid>
        </GroupBox>

        <GroupBox Grid.Row="1"
                  Header="Processing"
                  FontFamily="Segoe UI"
                  FontSize="12"
                  Padding="6"
                  Margin="0,0,0,12">

            <RichTextBox x:Name="StatusTextBox"
                             IsReadOnly="True"
                             FontFamily="Consolas"
                             FontSize="12">
                <FlowDocument PageWidth="10000"/>
            </RichTextBox>
        </GroupBox>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" Margin="400,0,0,0">
                <Button
                    x:Name="RunButton"
                    Content="Run"
                    Width="100"
                    Click="RunButton_Click" Height="50"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
